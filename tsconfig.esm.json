{
  "include": ["./src/"],
  "exclude": ["./node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist/esm",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "Node16",
    "skipLibCheck": true,
    "removeComments": true,
  }
}
