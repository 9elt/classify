{
  "include": ["./src/"],
  "exclude": ["./node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist/cjs",
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "allowJs": true,
    "declaration": true,
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "skipLibCheck": true,
    "removeComments": true,
  }
}